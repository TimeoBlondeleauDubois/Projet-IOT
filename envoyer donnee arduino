#include <ESP8266WiFi.h>
#include <PubSubClient.h>
#include <Wire.h>
#include <Adafruit_Sensor.h>
#include <Adafruit_BME280.h>

Adafruit_BME280 bme;
const char* ssid = "Alexandre's Galaxy S21 5G";
const char* password = "MMMMMMMM";
const char* mqttServer = "192.168.170.187";
const int mqttPort = 1883;
const char* mqttUser = "legra";
const char* mqttPassword = "123";
WiFiClient espClient;
PubSubClient client(espClient);

void setup() {
  Serial.begin(115200);

  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.println("Connecting to WiFi..");
  }
  Serial.println("Connected to the WiFi network");

  client.setServer(mqttServer, mqttPort);
  while (!client.connected()) {
    Serial.println("Connecting to MQTT...");
    if (client.connect("ESP8266Client", mqttUser, mqttPassword)) {
      Serial.println("Connected to MQTT");
    } else {
      Serial.print("Failed with state ");
      Serial.print(client.state());
      delay(2000);
    }
  }

  Wire.begin();
  bme.begin(0x76);
}

void loop() {
  float temperature = bme.readTemperature();
  float humidity = bme.readHumidity();
  float pressure = bme.readPressure() / 100.0F;

  // Afficher les valeurs sur la console s√©rie
  Serial.print("Temperature = ");
  Serial.print(temperature);
  Serial.println(" *C");

  Serial.print("Humidity = ");
  Serial.print(humidity);
  Serial.println(" %");

  Serial.print("Pressure = ");
  Serial.print(pressure);
  Serial.println(" hPa");

  // Publier les valeurs sur MQTT
  client.publish("esp8266/temperature", String(temperature).c_str());
  client.publish("esp8266/humidity", String(humidity).c_str());
  client.publish("esp8266/pressure", String(pressure).c_str());

  delay(5000);
}